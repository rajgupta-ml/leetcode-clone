generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum ProfileLevel {
  noob
  intermediate
  advance
  king
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  rating Int @default(0)
  level ProfileLevel @default(noob)  
}


