generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum ProfileLevel {
  noob
  intermediate
  advance
  king
}

enum UserRole {
  admin
  student
}

enum Verdict {
  wrong
  success
  tle
}

enum SupportedLanguages {
  c
  cPlusPlus
  python
  java
  javascript
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  role UserRole @default(student)
  rating Int @default(0)
  level ProfileLevel @default(noob)  
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  refreshToken RefreshToken[]
  submission Submission[]
  solutions Solutions[]
}


model RefreshToken {
  id String @id @default(uuid())
  token String 
  revoked Boolean @default(false) 
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  userId String
  user User @relation(fields: [userId], references: [id])


  @@index([token])
  @@index([userId], type: Hash)
}


model Questions {
  id  String @id @default(uuid()) 
  question String
  question_title  String
  question_rating String
  question_level ProfileLevel

  testcase String[]
  examples String[]

  
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  submission Submission[]
  solution Solutions[]
}


model Solutions {
  id String @id @default(uuid())
  questionId String
  solution String
  authorId String
  language SupportedLanguages
    
  author User @relation(fields: [authorId], references: [id])
  question Questions @relation(fields: [questionId], references: [id])
}
 

model Submission {
  id String @id @default(uuid())
  questionId String
  userId String
  verdict Verdict
  languagde SupportedLanguages


  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  
  question Questions @relation(fields: [questionId],references: [id])
  user User @relation(fields: [userId], references: [id])
}